{% comment %}
  NUSENSE TryON Script
  Loads the widget functionality
{% endcomment %}

{% assign widget_url = shop.metafields.nusense.widget_url | default: 'https://try-this-look.vercel.app' %}
{% assign debug_mode = shop.metafields.nusense.debug_mode | default: false %}

<script>
  // Initialize widget configuration
  window.NUSENSE_CONFIG = {
    widgetUrl: '{{ widget_url }}',
    debug: {{ debug_mode }},
    autoDetect: true,
    shopDomain: '{{ shop.permanent_domain }}'
  };
  
  // Product data for NUSENSE widget
  // Extract ALL product images from product.media (modern Shopify themes) or product.images (legacy)
  {% if product %}
  {% comment %} 
    Priority 1: Use product.media and filter for images only (Shopify 2.0 themes)
    Priority 2: Fallback to product.images (legacy themes)
  {% endcomment %}
  {% assign product_images_from_media = product.media | where: 'media_type', 'image' %}
  
  window.NUSENSE_PRODUCT_DATA = {
    id: {{ product.id }},
    title: {{ product.title | json }},
    price: "{{ product.price | money }}",
    priceRaw: {{ product.price | money_without_currency }},
    images: [
      {% comment %} Extract images from product.media (filtered to images only) {% endcomment %}
      {% if product_images_from_media.size > 0 %}
        {% for media_item in product_images_from_media limit: 20 %}
          {% comment %} Ensure absolute URL by prepending https: if needed {% endcomment %}
          {% assign image_url_full = media_item | image_url: width: 1200 %}
          {% unless image_url_full contains '://' %}
            {% assign image_url_full = 'https:' | append: image_url_full %}
          {% endunless %}
          "{{ image_url_full }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      {% else %}
        {% comment %} Fallback: use product.images (legacy themes) {% endcomment %}
        {% for image in product.images limit: 20 %}
          {% comment %} Ensure absolute URL by prepending https: if needed {% endcomment %}
          {% assign image_url_full = image | image_url: width: 1200 %}
          {% unless image_url_full contains '://' %}
            {% assign image_url_full = 'https:' | append: image_url_full %}
          {% endunless %}
          "{{ image_url_full }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      {% endif %}
    ],
    description: {{ product.description | strip_html | truncate: 200 | json }},
    variants: [
      {% for variant in product.variants %}
        {
          id: {{ variant.id }},
          title: {{ variant.title | json }},
          price: "{{ variant.price | money }}",
          priceRaw: {{ variant.price | money_without_currency }},
          available: {{ variant.available | json }},
          {% if variant.option1 %}option1: {{ variant.option1 | json }},{% endif %}
          {% if variant.option2 %}option2: {{ variant.option2 | json }},{% endif %}
          {% if variant.option3 %}option3: {{ variant.option3 | json }}{% endif %}
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    url: "{{ shop.url }}{{ product.url }}",
    shop: {
      name: {{ shop.name | json }},
      domain: "{{ shop.permanent_domain }}"
    }
  };
  {% endif %}
  
  // Load widget script
  (function() {
    if (!document.querySelector('script[src*="nusense-tryon-widget.js"]')) {
      const script = document.createElement('script');
      script.src = '{{ widget_url }}/nusense-tryon-widget.js';
      script.async = true;
      script.defer = true;
      script.onload = function() {
        if (window.NUSENSE_CONFIG && window.NUSENSE_CONFIG.debug) {
          console.log('NUSENSE TryON Widget loaded successfully');
        }
      };
      script.onerror = function() {
        console.error('Failed to load NUSENSE TryON Widget from {{ widget_url }}');
      };
      document.head.appendChild(script);
    }
  })();
</script>

{% comment %}
  Automatic Image Transmission Listener
  This script automatically handles image requests from the widget iframe
  No merchant configuration required - works automatically
{% endcomment %}
<script>
  (function() {
    'use strict';
    
    // Only initialize once
    if (window.NUSENSE_IMAGE_LISTENER_INITIALIZED) {
      return;
    }
    window.NUSENSE_IMAGE_LISTENER_INITIALIZED = true;
    
    // Configuration
    const CONFIG = {
      debug: {{ debug_mode | default: false }},
      allowedOrigins: ['*'], // In production, restrict to widget domain
      widgetUrl: '{{ widget_url | default: "https://try-this-look.vercel.app" }}'
    };
    
    // Logging helper - always log critical messages, detailed logs only if debug enabled
    function log(message, data) {
      // Always log critical messages
      const criticalMessages = ['Image transmission listener initialized', 'Received image request from iframe', 'Sent images to iframe', 'Using images from NUSENSE_PRODUCT_DATA', 'No product images found on Shopify page', 'Error'];
      const isCritical = criticalMessages.some(function(crit) {
        return message.indexOf(crit) !== -1;
      });
      
      if (CONFIG.debug || isCritical) {
        console.log('NUSENSE [Image Listener]:', message, data || '');
      }
    }
    
    // Always log initialization (critical)
    console.log('NUSENSE [Image Listener]: Initializing image extraction listener on Shopify product page');
    
    // Validate origin (optional security measure)
    function isValidOrigin(origin) {
      if (CONFIG.allowedOrigins.includes('*')) {
        return true; // Allow all in development
      }
      try {
        const widgetUrlObj = new URL(CONFIG.widgetUrl);
        return origin === widgetUrlObj.origin;
      } catch (e) {
        return false;
      }
    }
    
    // Helper function to ensure absolute URL
    function ensureAbsoluteUrl(url) {
      if (!url || typeof url !== 'string') return null;
      // If already absolute, return as is
      if (url.match(/^https?:\/\//)) {
        return url;
      }
      // If protocol-relative (//example.com), add https:
      if (url.match(/^\/\//)) {
        return 'https:' + url;
      }
      // If relative, make absolute based on current origin
      try {
        return new URL(url, window.location.origin).href;
      } catch (e) {
        return url; // Return as-is if URL constructor fails
      }
    }
    
    // Extract images from Shopify product JSON in script tags
    function extractFromShopifyJSON() {
      const images = [];
      try {
        // Method 1: Check script tags with type="application/json" (Shopify 2.0 themes)
        const scripts = document.querySelectorAll('script[type="application/json"]');
        for (const script of scripts) {
          try {
            const data = JSON.parse(script.textContent || '{}');
            
            // Check for media array (Shopify 2.0 themes - preferred method)
            if (data.product && data.product.media) {
              const media = data.product.media;
              if (Array.isArray(media)) {
                media.forEach(function(item) {
                  // Filter for images only
                  if (item.media_type === 'image' || !item.media_type) {
                    let imgUrl = null;
                    if (item.preview && item.preview.image && item.preview.image.src) {
                      imgUrl = item.preview.image.src;
                    } else if (item.src) {
                      imgUrl = item.src;
                    } else if (item.url) {
                      imgUrl = item.url;
                    }
                    if (imgUrl) {
                      imgUrl = ensureAbsoluteUrl(imgUrl);
                      if (imgUrl && images.indexOf(imgUrl) === -1) images.push(imgUrl);
                    }
                  } else if (item.preview_image && item.preview_image.src) {
                    // For videos/models, use preview image
                    const imgUrl = ensureAbsoluteUrl(item.preview_image.src);
                    if (imgUrl && images.indexOf(imgUrl) === -1) images.push(imgUrl);
                  }
                });
                if (images.length > 0) {
                  log('Extracted images from Shopify media array', images.length);
                  return images;
                }
              }
            }
            
            // Check for images array (legacy themes)
            if (data.product && data.product.images) {
              const productImages = data.product.images;
              if (Array.isArray(productImages)) {
                productImages.forEach(function(img) {
                  let imgUrl = null;
                  if (typeof img === 'string') {
                    imgUrl = img;
                  } else if (img.src) {
                    imgUrl = img.src;
                  } else if (img.url) {
                    imgUrl = img.url;
                  } else if (img.originalSrc) {
                    imgUrl = img.originalSrc;
                  }
                  if (imgUrl) {
                    imgUrl = ensureAbsoluteUrl(imgUrl);
                    if (imgUrl && images.indexOf(imgUrl) === -1) images.push(imgUrl);
                  }
                });
                if (images.length > 0) {
                  log('Extracted images from Shopify JSON images array', images.length);
                  return images;
                }
              }
            }
          } catch (e) {
            // Continue to next script
          }
        }
        
        // Method 2: Check window.Shopify.product (legacy themes)
        if (typeof window.Shopify !== 'undefined' && window.Shopify.product) {
          if (window.Shopify.product.media) {
            // Prefer media array (Shopify 2.0)
            window.Shopify.product.media.forEach(function(item) {
              if (item.media_type === 'image' || !item.media_type) {
                let imgUrl = null;
                if (item.src) imgUrl = item.src;
                else if (item.url) imgUrl = item.url;
                else if (item.preview_image && item.preview_image.src) imgUrl = item.preview_image.src;
                if (imgUrl) {
                  imgUrl = ensureAbsoluteUrl(imgUrl);
                  if (imgUrl && images.indexOf(imgUrl) === -1) images.push(imgUrl);
                }
              }
            });
          }
          if (images.length === 0 && window.Shopify.product.images) {
            // Fallback to images array
            window.Shopify.product.images.forEach(function(img) {
              let imgUrl = null;
              if (typeof img === 'string') {
                imgUrl = img;
              } else if (img.src) {
                imgUrl = img.src;
              }
              if (imgUrl) {
                imgUrl = ensureAbsoluteUrl(imgUrl);
                if (imgUrl && images.indexOf(imgUrl) === -1) images.push(imgUrl);
              }
            });
          }
          if (images.length > 0) {
            log('Extracted images from window.Shopify.product', images.length);
            return images;
          }
        }
      } catch (e) {
        log('Error extracting from Shopify JSON', e);
      }
      return images;
    }
    
    // Extract images from DOM (fallback method)
    function extractFromDOM() {
      const images = [];
      const seenUrls = new Set();
      
      try {
        // Priority selectors for product images
        const selectors = [
          '.product__media img',
          '.product-image img',
          '.product-gallery img',
          '.product-photos img',
          '.product__media-wrapper img',
          '.product-single__media img',
          '[data-product-image] img',
          '[data-product-single-media-group] img',
          '.product-images img',
          '.product-media img'
        ];
        
        selectors.forEach(function(selector) {
          const elements = document.querySelectorAll(selector);
          elements.forEach(function(img) {
            if (img instanceof HTMLImageElement) {
              const sources = [
                img.src,
                img.dataset.src,
                img.dataset.lazySrc,
                img.dataset.originalSrc,
                img.currentSrc
              ].filter(Boolean);
              
              sources.forEach(function(src) {
                if (src && !seenUrls.has(src)) {
                  // Basic validation: must be a valid image URL
                  if (src.match(/\.(jpg|jpeg|png|webp|gif|avif)(\?|$)/i)) {
                    // Ensure absolute URL
                    const absUrl = ensureAbsoluteUrl(src);
                    if (absUrl) {
                      images.push(absUrl);
                      seenUrls.add(absUrl);
                      seenUrls.add(src); // Also mark original as seen
                    }
                  }
                }
              });
            }
          });
        });
        
        if (images.length > 0) {
          log('Extracted images from DOM', images.length);
        }
      } catch (e) {
        log('Error extracting from DOM', e);
      }
      
      return images;
    }
    
    // Get product images with priority order
    // This function runs on the Shopify product page (parent window) to extract images
    // and send them to the widget iframe
    function getProductImages() {
      let images = [];
      
      // Debug: Always log what we're checking
      console.log('NUSENSE [Image Listener]: getProductImages called');
      console.log('NUSENSE [Image Listener]: window.NUSENSE_PRODUCT_DATA exists?', !!window.NUSENSE_PRODUCT_DATA);
      if (window.NUSENSE_PRODUCT_DATA) {
        console.log('NUSENSE [Image Listener]: NUSENSE_PRODUCT_DATA.images', window.NUSENSE_PRODUCT_DATA.images);
      }
      
      // Priority 1: Use NUSENSE_PRODUCT_DATA (most reliable - from Liquid)
      // This is populated by the Liquid template with product.media/product.images
      {% if product %}
      if (window.NUSENSE_PRODUCT_DATA && window.NUSENSE_PRODUCT_DATA.images && Array.isArray(window.NUSENSE_PRODUCT_DATA.images)) {
        images = window.NUSENSE_PRODUCT_DATA.images.filter(function(img) {
          return img && typeof img === 'string' && img.trim().length > 0;
        });
        if (images.length > 0) {
          console.log('NUSENSE [Image Listener]: ✅ Using images from NUSENSE_PRODUCT_DATA (Liquid template)', images.length, images);
          return images;
        } else {
          console.log('NUSENSE [Image Listener]: ⚠️ NUSENSE_PRODUCT_DATA.images is empty or invalid');
        }
      } else {
        console.log('NUSENSE [Image Listener]: ⚠️ NUSENSE_PRODUCT_DATA not found or invalid');
      }
      {% else %}
      console.log('NUSENSE [Image Listener]: ⚠️ Not on a product page (product object not available)');
      {% endif %}
      
      // Priority 2: Extract from Shopify product JSON (from theme's script tags)
      images = extractFromShopifyJSON();
      if (images.length > 0) {
        console.log('NUSENSE [Image Listener]: ✅ Using images from Shopify JSON', images.length);
        return images;
      }
      
      // Priority 3: Extract from DOM (fallback - less reliable)
      images = extractFromDOM();
      if (images.length > 0) {
        console.log('NUSENSE [Image Listener]: ✅ Using images from DOM extraction', images.length);
        return images;
      }
      
      console.log('NUSENSE [Image Listener]: ❌ No product images found on Shopify page');
      return [];
    }
    
    // Handle widget action buttons (buy now, add to cart, etc.)
    function handleWidgetAction(actionType, event) {
      console.log('NUSENSE [Image Listener]: Processing action:', actionType);
      
      {% if product %}
      // Get product form and variant selector
      const productForm = document.querySelector('form[action*="/cart/add"]');
      const variantSelector = document.querySelector('[name="id"]') || document.querySelector('input[name="id"]');
      
      if (!productForm) {
        console.warn('NUSENSE [Image Listener]: Product form not found on page');
        return;
      }
      
      switch (actionType) {
        case 'NUSENSE_BUY_NOW':
          // Trigger buy now (redirect to checkout)
          console.log('NUSENSE [Image Listener]: Buy Now clicked');
          if (productForm) {
            // Add to cart and redirect to checkout
            const formData = new FormData(productForm);
            formData.append('return_to', '/checkout');
            fetch('/cart/add.js', {
              method: 'POST',
              body: formData
            }).then(function(response) {
              if (response.ok) {
                window.location.href = '/checkout';
              } else {
                console.error('NUSENSE [Image Listener]: Failed to add to cart for buy now');
                // Fallback: just redirect to cart
                window.location.href = '/cart';
              }
            }).catch(function(error) {
              console.error('NUSENSE [Image Listener]: Error in buy now:', error);
              window.location.href = '/cart';
            });
          }
          break;
          
        case 'NUSENSE_ADD_TO_CART':
          // Add product to cart
          console.log('NUSENSE [Image Listener]: Add to Cart clicked');
          if (productForm) {
            const formData = new FormData(productForm);
            fetch('/cart/add.js', {
              method: 'POST',
              body: formData
            }).then(function(response) {
              if (response.ok) {
                console.log('NUSENSE [Image Listener]: Product added to cart');
                // Optionally trigger cart drawer/notification
                if (typeof window.dispatchEvent !== 'undefined') {
                  window.dispatchEvent(new CustomEvent('cart:updated'));
                }
              } else {
                console.error('NUSENSE [Image Listener]: Failed to add to cart');
              }
            }).catch(function(error) {
              console.error('NUSENSE [Image Listener]: Error adding to cart:', error);
            });
          }
          break;
          
        case 'NUSENSE_TRY_IN_STORE':
          // Try in store - could redirect to store locator or show message
          console.log('NUSENSE [Image Listener]: Try in Store clicked');
          // This would need to be customized based on the store's setup
          // For now, just log it - merchant can customize this action
          alert('Fonctionnalité "essayer en magasin" - À configurer selon votre magasin');
          break;
          
        default:
          console.log('NUSENSE [Image Listener]: Unknown action type:', actionType);
      }
      {% else %}
      console.warn('NUSENSE [Image Listener]: Not on a product page - cannot handle action');
      {% endif %}
    }
    
    // Handle incoming messages from iframe
    function handleMessage(event) {
      // Always log all messages for debugging (filter out non-NUSENSE messages)
      if (event.data && event.data.type) {
        console.log('NUSENSE [Image Listener]: Received message:', event.data.type, 'from', event.origin);
      }
      
      // Handle image requests
      if (event.data && event.data.type === 'NUSENSE_REQUEST_IMAGES') {
        handleImageRequest(event);
        return;
      }
      
      // Handle action button clicks from widget
      if (event.data && event.data.type && (
        event.data.type === 'NUSENSE_BUY_NOW' ||
        event.data.type === 'NUSENSE_ADD_TO_CART' ||
        event.data.type === 'NUSENSE_TRY_IN_STORE'
      )) {
        handleWidgetAction(event.data.type, event);
        return;
      }
    }
    
    // Handle image request from iframe
    function handleImageRequest(event) {
      console.log('NUSENSE [Image Listener]: ✅ Processing NUSENSE_REQUEST_IMAGES from', event.origin);
      
      // Optional: Validate origin (security)
      // Uncomment and configure for production
      /*
      if (!isValidOrigin(event.origin)) {
        console.log('NUSENSE [Image Listener]: ❌ Invalid origin', event.origin);
        return;
      }
      */
      
      log('Received image request from iframe', event.origin);
      
      // Get product images
      const images = getProductImages();
      
      console.log('NUSENSE [Image Listener]: Extracted', images.length, 'images, preparing to send to iframe');
      
      // Send images back to iframe - ALWAYS send a response, even if empty
      if (event.source && event.source !== window) {
        try {
          event.source.postMessage({
            type: 'NUSENSE_PRODUCT_IMAGES',
            images: images
          }, '*'); // Use '*' for development, restrict in production
          
          console.log('NUSENSE [Image Listener]: ✅ Successfully sent', images.length, 'images to iframe');
          console.log('NUSENSE [Image Listener]: Images sent:', images);
          
          log('Sent images to iframe', {
            count: images.length,
            origin: event.origin
          });
        } catch (e) {
          console.error('NUSENSE [Image Listener]: ❌ Error sending images to iframe', e);
          log('Error sending images to iframe', e);
        }
      } else {
        console.error('NUSENSE [Image Listener]: ❌ Invalid event source for image request');
        log('Invalid event source for image request');
      }
    }
    
    // Initialize message listener
    window.addEventListener('message', handleMessage);
    
    // Always log initialization (critical)
    console.log('NUSENSE [Image Listener]: ✅ Message listener attached to window');
    console.log('NUSENSE [Image Listener]: Listening for NUSENSE_REQUEST_IMAGES messages');
    
    // Log NUSENSE_PRODUCT_DATA status immediately
    {% if product %}
    console.log('NUSENSE [Image Listener]: Product page detected');
    console.log('NUSENSE [Image Listener]: NUSENSE_PRODUCT_DATA available:', window.NUSENSE_PRODUCT_DATA ? 'YES' : 'NO');
    if (window.NUSENSE_PRODUCT_DATA) {
      console.log('NUSENSE [Image Listener]: NUSENSE_PRODUCT_DATA.images count:', window.NUSENSE_PRODUCT_DATA.images ? window.NUSENSE_PRODUCT_DATA.images.length : 'undefined');
      if (window.NUSENSE_PRODUCT_DATA.images && window.NUSENSE_PRODUCT_DATA.images.length > 0) {
        console.log('NUSENSE [Image Listener]: Sample images:', window.NUSENSE_PRODUCT_DATA.images.slice(0, 3));
      }
    } else {
      console.log('NUSENSE [Image Listener]: ⚠️ NUSENSE_PRODUCT_DATA not yet available - will check again');
      // Check again after a short delay in case it loads asynchronously
      setTimeout(function() {
        if (window.NUSENSE_PRODUCT_DATA) {
          console.log('NUSENSE [Image Listener]: ✅ NUSENSE_PRODUCT_DATA now available (delayed check)');
          if (window.NUSENSE_PRODUCT_DATA.images) {
            console.log('NUSENSE [Image Listener]: NUSENSE_PRODUCT_DATA.images count:', window.NUSENSE_PRODUCT_DATA.images.length);
          }
        } else {
          console.log('NUSENSE [Image Listener]: ⚠️ NUSENSE_PRODUCT_DATA still not available after delay');
        }
      }, 500);
    }
    {% else %}
    console.log('NUSENSE [Image Listener]: ⚠️ Not on a product page');
    {% endif %}
    
    log('Image transmission listener initialized');
    
    // Also listen for widget script load completion
    // This ensures the listener is ready before widget requests images
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        console.log('NUSENSE [Image Listener]: DOM ready - listener active');
        log('DOM ready - listener active');
      });
    } else {
      console.log('NUSENSE [Image Listener]: DOM already ready - listener active');
      log('DOM already ready - listener active');
    }
  })();
</script>

